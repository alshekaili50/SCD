<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.IEEE.SCD.main_menu">

    <ImageView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:src="@mipmap/news"
        android:padding="15dp"
        android:id="@+id/news"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="new evidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/news"
        android:layout_marginTop="11dp"
        android:id="@+id/new_evidence"/>

    <Button
        android:text="new suspect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/new_evidence"
        android:layout_toEndOf="@+id/new_evidence"
        android:layout_marginStart="19dp"
        android:id="@+id/new_suspect"/>

    <Button
        android:text="new case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_case"
        android:layout_below="@+id/news"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="new victim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_victim"
        android:layout_below="@+id/news"
        android:layout_toEndOf="@+id/news"/>

    <Button
        android:text="manage cases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manage_cases"
        android:layout_alignBaseline="@+id/manage_suspects"
        android:layout_alignBottom="@+id/manage_suspects"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="manage suspects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manage_suspects"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/new_suspect"
        android:layout_marginEnd="16dp"/>

    <Button
        android:text="Serial criminal detector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SCD"
        android:layout_above="@+id/manage_cases"
        android:layout_alignStart="@+id/new_victim"
        android:layout_marginStart="15dp"/>


</RelativeLayout>
