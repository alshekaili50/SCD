<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/mapView"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:id="@+id/scrollView1"
    android:fillViewport="true" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/case_time_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/case_id_detail"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/case_id_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/case_name_detail"
         />

        <TextView
            android:layout_below="@+id/case_time_detail"

            android:id="@+id/case_date_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView

            android:id="@+id/case_type_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/case_date_detail"
            />
        <TextView
            android:layout_below="@+id/case_type_detail"

            android:id="@+id/case_weapon_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         />
        <TextView
            android:id="@+id/case_name_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout1"
            android:layout_marginTop="50dp"



            >
            <TableRow
                android:background="@drawable/row_border"
                android:id="@+id/victim_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- first column -->
                <TextView
                    android:id="@+id/victim_name"
                    android:text="Victim name"/>
                <!-- second column -->
                <!-- third column -->
                <TextView
                    android:layout_marginLeft="150dp"
                    android:id="@+id/victim_id"
                    android:text="Victim ID"/>
            </TableRow>

        </TableLayout>
        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/case_weapon_detail"




            >
            <TableRow
                android:background="@drawable/row_border"
                android:id="@+id/lastExpensesTableRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- first column -->
                <TextView
                    android:id="@+id/lastExpensesTableName"
                    android:text="Suspect name"/>
                <!-- second column -->
                <!-- third column -->
                <TextView
                    android:layout_marginLeft="150dp"
                    android:id="@+id/lastExpensesTableAmount"
                    android:text="Suspect ID"/>
            </TableRow>

        </TableLayout>
        <TableLayout
            android:id="@+id/tableLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout3"
            android:layout_marginTop="50dp"




            >
            <TableRow
                android:background="@drawable/row_border"
                android:id="@+id/witness_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <!-- first column -->
                <TextView
                    android:text="Witness name"/>
                <!-- second column -->
                <!-- third column -->
                <TextView
                    android:layout_marginLeft="35dp"
                    android:text="Body type"/>
                <TextView
                    android:layout_marginLeft="35dp"
                    android:text="Height"/>
                <TextView
                    android:layout_marginLeft="35dp"
                    android:text="Skin color"/>



            </TableRow>

        </TableLayout>
        <TableLayout
            android:id="@+id/tableLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout2"
            android:layout_marginTop="50dp"




            >
            <TableRow
                android:background="@drawable/row_border"
                android:id="@+id/evidence_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <!-- first column -->
                <TextView
                    android:id="@+id/Evidence_detail"
                    android:text="Evidence detail"/>
                <!-- second column -->
                <!-- third column -->
                <TextView
                    android:layout_marginLeft="150dp"
                    android:id="@+id/evidence_id"
                    android:text="Evidence ID"/>
            </TableRow>

        </TableLayout>




    </RelativeLayout>


</ScrollView>


</RelativeLayout>











