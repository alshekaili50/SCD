<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:background="@color/colorPrimaryDark"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <TextView
            android:textSize="40dp"
            android:textColor="@color/text_black_87"
            android:background="@drawable/border"
            android:id="@+id/avg_location"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_centerHorizontal="true"

            android:textSize="40dp"
            android:textColor="@color/text_black_87"
            android:background="@drawable/border"
            android:id="@+id/avg_type"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avg_location"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_centerHorizontal="true"

            android:textSize="40dp"
            android:textColor="@color/text_black_87"
            android:background="@drawable/border"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/avg_type"
            android:id="@+id/avg_weapon"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_centerHorizontal="true"

            android:textSize="40dp"
            android:textColor="@color/text_black_87"
            android:background="@drawable/border"
            android:id="@+id/avg_victims"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avg_weapon"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_centerHorizontal="true"

            android:textSize="40dp"
            android:textColor="@color/text_black_87"
            android:background="@drawable/border"
            android:id="@+id/avg_evidences"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avg_victims"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_centerHorizontal="true"

            android:textSize="40dp"
            android:textColor="@color/text_black_87"
            android:background="@drawable/border"
            android:id="@+id/avg_witness"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avg_evidences"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_centerHorizontal="true"

            android:textSize="40dp"
            android:textColor="@color/text_black_87"
            android:background="@drawable/border"
            android:id="@+id/avg_overall"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avg_witness"
            android:layout_marginTop="50dp"
            />




    </RelativeLayout>
</ScrollView>
